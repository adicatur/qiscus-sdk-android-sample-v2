<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.technomotion.ui.groupchatcreation.GroupInfoFragment"
    android:background="@color/qiscus_white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="25dp"
                android:id="@+id/group_avatar"
                android:src="@drawable/ic_default_group_avatar"
                />
            <com.qiscus.sdk.ui.view.QiscusCircularImageView
                android:id="@+id/upload_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_upload"
                android:tint="#C4C4C4"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:layout_marginBottom="20dp"
                android:textColor="@color/orangeIcon"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_name_input"
                android:hint="@string/group_name_hint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_upload_text"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
        <View
            android:id="@+id/underline"
            android:background="#FF000000"
            android:layout_height="0.0001dp"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participants"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textColor="@color/orangeIcon"/>
        <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/qiscus_white"
        ></View>

    </LinearLayout>
</FrameLayout>
